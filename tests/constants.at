AT_BANNER([[Checking evaluating constants.]])

AT_SETUP([Check constants.])

AT_DATA([constant.scm],
[[
(define f (evaluator-create "42"))
(display (evaluator-evaluate-x f 0))
]])

AT_CHECK([matheval.sh constant.scm], [ignore], [42.0], [ignore])

AT_DATA([constant.scm],
[[
(define f (evaluator-create "-2"))
(display (evaluator-evaluate-x f 0))
]])

AT_CHECK([matheval.sh constant.scm], [ignore], [-2.0], [ignore])

AT_DATA([constant.scm],
[[
(define f (evaluator-create "2+2"))
(display (evaluator-evaluate-x f 0))
]])

AT_CHECK([matheval.sh constant.scm], [ignore], [4.0], [ignore])

AT_DATA([constant.scm],
[[
(define f (evaluator-create "3^(-0.4)"))
(display (evaluator-evaluate-x f 0))
]])

AT_CHECK([matheval.sh constant.scm], [ignore], [0.644394014977254], [ignore])

AT_CLEANUP
